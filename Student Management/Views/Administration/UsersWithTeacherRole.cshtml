@model IEnumerable<Student_Management.Models.TeacherRoleUserViewModel>

@{
    ViewBag.Title = "Users with Teacher Role";
}

<div class="text-center">
    <h1>Teacher's List</h1>
</div>

<table id="Table" class="table table-striped table-bordered">
    <thead>
        <tr>
           
           
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Gender</th>
            
            <th width=300px>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
               
               
                <td >@user.FirstName</td>
                <td >@user.LastName</td>
                <td >@user.Email</td>
                <td >@user.Gender</td>
               

                <td width=300px class="btn-group" role="gruop">
                    <div width=300px>
                        <a asp-action="DetailsTeacher" asp-route-id="@user.Id" class="btn btn-info" data-toggle="tooltip" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>

                        <a asp-action="EditTeacher" asp-route-id="@user.Id" class="btn btn-warning" data-toggle="tooltip" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-action="DeleteTeacher" asp-route-id="@user.Id" class="btn btn-danger" data-toggle="tooltip" title="Delate">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
                </tr>

        }
    </tbody>
</table>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<style type="text/css">
    #tbllist_filter {
        margin-bottom: 1%;
    }
</style>

<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#Table').DataTable({

        });
        LoadListing();
    });
</script>


<style>
    .btn {
        width: 80px;
        margin: auto;
    }
</style>