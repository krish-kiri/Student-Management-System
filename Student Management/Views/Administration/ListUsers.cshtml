@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1 class="text-center">All Users</h1>

@if (Model?.Any() ?? false) // Ensures null safety and checks if data exists
{
    <div class="add-new-user mb-4">
        <a asp-action="Register" asp-controller="Account"
           class="btn btn-primary px-4 rounded-pill">
            Add New User
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-light">
                <tr>
                   
                    <th>Username</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                       
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>

                        <td>
                            <a asp-controller="Administration" asp-action="EditUser"
                               asp-route-Id="@user.Id" class="btn btn-warning me-2 px-4 rounded-pill">Edit</a>

                            <form method="post" asp-action="DeleteUser" asp-route-Id="@user.Id" style="display:inline;">
                                <button type="button" class="btn btn-outline-danger px-4 rounded-pill"
                                        onclick="confirmDelete('@user.Id', true)">
                                    Delete
                                </button>

                                <span id="confirmDeleteSpan_@user.Id" style="display:none">
                                    <span>Are you sure?</span>
                                    <button type="submit" class="btn btn-danger me-2 px-4 rounded-pill">Yes</button>
                                    <a href="#" class="btn btn-primary px-4 rounded-pill"
                                       onclick="confirmDelete('@user.Id', false)">No</a>
                                </span>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card">
        <div class="card-header text-center">
            No Users Added Yet
        </div>
    </div>
}

<script>
       function confirmDelete(uniqueId, isTrue) {
        const confirmDeleteSpan = document.getElementById('confirmDeleteSpan_' + uniqueId);

        if (isTrue) {
            confirmDeleteSpan.style.display = 'inline';
        } else {
            confirmDeleteSpan.style.display = 'none';
        }
    }
</script>

<style>
    .add-new-user {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin: auto;
    }

    .btn-medium {
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
