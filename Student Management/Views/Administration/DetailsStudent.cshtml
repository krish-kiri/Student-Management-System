@model StudentRoleUserViewModel
<div class="container">
    <div class="card mx-auto shadow-lg" style="max-width: 1000px;">
        <div class="card-header bg-info text-black text-center py-3">
            <h1 class="h3 mb-0">Student's Details</h1>
        </div>
        <div class="card-body p-4">
            <div class="d-flex flex-column align-items-center">
                <!-- Student Details -->
                <div class="detail-row">
                    <strong>Student ID</strong>
                    <span>:   @Model.Id</span>
                </div>
                <div class="detail-row">
                    <strong>User Name</strong>
                    <span>:   @Model.UserName</span>
                </div>
                <div class="detail-row">
                    <strong>Email</strong>
                    <span>:   @Model.Email</span>
                </div>
                <div class="detail-row">
                    <strong>First Name</strong>
                    <span>:   @Model.FirstName</span>
                </div>
                <div class="detail-row">
                    <strong>Last Name</strong>
                    <span>:   @Model.LastName</span>
                </div>
                <div class="detail-row">
                    <strong>Date of Birth</strong>
                    <span>:   @Model.DateofBirth</span>
                </div>
                <div class="detail-row">
                    <strong>Gender</strong>
                    <span>:   @Model.Gender</span>
                </div>
                <div class="detail-row">
                    <strong>Phone Number</strong>
                    <span>:   @Model.PhoneNumber</span>
                </div>
                <div class="detail-row">
                    <strong>Address</strong>
                    <span>:   @Model.Address</span>
                </div>
                <!-- Back Button -->
                <div class="text-center mt-4">
                    <a asp-controller="Administration" asp-action="UsersWithStudentRole" class="btn btn-primary me-3 px-5 rounded-pill">
                        Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 800px;
        padding: 8px 0;
        font-size: 1.1rem;
        border-bottom: 1px solid #eaeaea;
    }

        .detail-row strong {
            color: #333;
            min-width: 200px;
            text-align: left;
        }

        .detail-row span {
            text-align: left;
            color: #555;
            flex-grow: 1;
            padding-left: 10px;
        }

    .btn {
        font-size: 1rem;
    }
</style>


