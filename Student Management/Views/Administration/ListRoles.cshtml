@model IEnumerable<ApplicationRole>

@{
    ViewBag.Title = "All Roles";
}

<h1 class="text-center">All Roles</h1>

@if (Model?.Any() ?? false) // Ensures null safety and checks if data exists
{
    <div class="add-new-role mb-4">
        <a class="btn btn-primary px-4 rounded-pill" asp-action="CreateRole" asp-controller="Administration">
            Add New Role
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-light">
                <tr>
                   
                    <th>Role Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        
                        <td>@role.Name</td>
                        <td>@(!string.IsNullOrEmpty(role.Description) ? role.Description : "No description available")</td>
                        <td>
                            <a asp-controller="Administration" asp-action="EditRole" asp-route-roleId="@role.Id"
                               class="btn btn-warning me-2 px-4 rounded-pill">Edit</a>

                            <form method="post" asp-action="DeleteRole" asp-route-roleId="@role.Id" style="display:inline;">
                                <button type="button" class="btn btn-outline-danger px-4 rounded-pill"
                                        onclick="confirmDelete('@role.Id', true)">
                                    Delete
                                </button>

                                <span id="confirmDeleteSpan_@role.Id" style="display:none">
                                    <span>Are you sure?</span>
                                    <button type="submit" class="btn btn-danger me-2 px-4 rounded-pill">Yes</button>
                                    <a href="#" class="btn btn-primary px-4 rounded-pill"
                                       onclick="confirmDelete('@role.Id', false)">No</a>
                                </span>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card">
        <div class="card-header text-center">
            No roles created yet
        </div>
        <div class="card-body text-center">
            <h5 class="card-title">Use the button below to create a role</h5>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

<script>
    function confirmDelete(uniqueId, isTrue) {
        const confirmDeleteSpan = document.getElementById('confirmDeleteSpan_' + uniqueId);

        if (isTrue) {
            confirmDeleteSpan.style.display = 'inline';
        } else {
            confirmDeleteSpan.style.display = 'none';
        }
    }
</script>

<style>
    .add-new-role {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        margin-left:20px;
    }

    .table {
        width: 100%;
        margin: auto;
    }

    .btn-medium {
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
