@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">

        <div class="card-header">
            <h3>Role: @ViewBag.RollName </h3>
        </div>
        <div class="card-header">
            <h4>Add or Remove Users From This Role</h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="card-button">
                <a asp-action="EditRole" asp-route-roleId="@roleId"
                   class="btn btn-outline-danger me-3 px-5 rounded-pill" style="width:auto">Cancel</a>
                <input type="submit" value="Update" class="btn btn-success px-5 rounded-pill"
                   style="width:auto" />
            
            </div>
        </div>
    </div>
</form>

<style>
    .card {
        width: 700px;
        margin: auto;
    }

</style>