@model List<Subject>

@{
    ViewBag.Title = "All Subjects";
}
<div class="text-center">
    <h1>Subjects List</h1>
</div>
<div  id ="AddSubject" class="col align-items-end">
    <a asp-controller="Subject" asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i> Add New Subject</a>
</div>
<hr />
@if (Model.Count > 0)
{
    <table id="Table" class="table table-striped table-bordered">
        <thead>
            <tr>


                
                <th class="text-start">Subject Number</th>
                <th >Subject Name</th>
                
              


                <th width=350px>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>



                    <td class ="text-start">@item.SubjectNumber</td>
                    <td>@item.SubjectName</td>
                   
                   



                    <td width=350px class="btn-group" role="gruop">
                        <div width=350px>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" data-toggle="tooltip" title="Details">
                                <i class="bi bi-info-circle"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" data-toggle="tooltip" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="tooltip" title="Delate">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>

                
            }
        </tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-uppercase text-warning pt-4">No Records to Show</h2>
        </div>
    </div>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<style type="text/css">
    #tbllist_filter {
        margin-bottom: 1%;
    }
</style>

<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#Table').DataTable({

        });
        LoadListing();
    });
</script>

<style>
    .btn {
        width: 90px;
        margin: auto;
    }
</style>