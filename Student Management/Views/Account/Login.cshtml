@using Student_Management.ViewModels;
@model LoginViewModel;

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
	<div class="account-box shadow-lg">
		<h2 class="text-center mb-4">Login</h2>
		<form asp-action="Login" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" class="form-control rounded-pill">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3" id="password-container">
				<label asp-for="Password" class="form-label"></label>
				<div class="position-relative">
					<input asp-for="Password" id="password" class="form-control rounded-pill" type="password">
					<img src="/images/eye-close.png" id="eyeicon" onclick="convert()" alt="Toggle password visibility">
				</div>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="float-end">
				<a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
					Forgot Password?
				</a>

			</div>
			<div class="form-check mb-3">
				<label class="form-check-label">
					<input asp-for="Rememberme" class="form-check-input" />
					@Html.DisplayNameFor(a=> a.Rememberme)
			    </label>		
			</div>
			
			<div class ="text-center">
				<a asp-controller="Home" asp-action="Index" class="btn btn-info px-5 rounded-pill "> Back </a>
				<input type="submit" value="Login" class="btn btn-success px-5 rounded-pill" />
				
			</div>
			<p class="text-center mt-3">
				Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
			</p>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}

	}

<style>
	.btn {
		margin-right: 20px;
		margin-left:20px;
	}

	#eyeicon {
		cursor: pointer;
		position: absolute;
		right: 10px;
		top: 10px;
		width: 20px;
		height: 20px;
	}

	#password-container {
		position: relative;
	}
</style>

<script>
	function convert() {
		const password = document.getElementById("password");
		const eyeicon = document.getElementById("eyeicon");

		if (password.type === "password") {
			password.type = "text";
			eyeicon.src = "/images/eye-open.png";
		} else {
			password.type = "password";
			eyeicon.src = "/images/eye-close.png";
		}
	};
</script>